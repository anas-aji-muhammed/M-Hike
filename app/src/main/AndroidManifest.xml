<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.uog_mobile_application_development.m_hike">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MHike">
        <activity
            android:name=".ConfirmDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".CreateHikeScreen"
            android:exported="false" />
        <activity
            android:name=".HomeScreen"
            android:exported="true">

            <!-- Changed the intent-filter from MainActivity to HomeScreen -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="false"></activity>
    </application>

</manifest>